<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <LinearLayout
        android:id="@+id/detailLayout"
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@drawable/ic_launcher">
    <!--how to add dynamic background to layout-->
        <!--http://stackoverflow.com/questions/13390864/setting-background-image-in-java        -->
        <TextView
            android:id="@+id/bikeName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Mountain Bike Details"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textSize="30dip"
            android:layout_gravity="right"/>

        <TextView
            android:id="@+id/price"
            android:layout_width="wrap_content"
            android:layout_height="1dip"
            android:layout_weight="1"
            android:text="Price:$1900"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textSize="20dip"
            android:layout_gravity="right" />

        <TextView
            android:id="@+id/weight"
            android:layout_width="wrap_content"
            android:layout_height="1dip"
            android:layout_weight="1"
            android:layout_gravity="right"
            android:text="Weight:10lbs"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textSize="20dip" />

        <TextView
            android:id="@+id/website"
            android:layout_width="wrap_content"
            android:layout_height="1dip"
            android:layout_weight="1"
            android:layout_gravity="right"
            android:text="Info:www.info.com"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textSize="20dip" />


    </LinearLayout>

    <LinearLayout
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left" />

</LinearLayout>


</LinearLayout>